# Rename this file to terraform.tfvars and fill in your values

aws_region      = "us-east-1"
project_name    = "shoppinglyx"
environment     = "dev"
instance_type   = "t3.micro"
root_volume_size = 20
public_key_path = "~/.ssh/id_rsa.pub"

# Restrict SSH access to your IP (replace with your IP)
allowed_ssh_cidr = ["YOUR_IP_ADDRESS/32"]

use_elastic_ip = true

# Optional: specify VPC and Subnet (uses default if not specified)
# vpc_id   = "vpc-12345678"
# subnet_id = "subnet-12345678"
